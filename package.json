{
  "name": "reshop",
  "version": "1.0.0",
  "description": "Ecommerce application that uses the MERN Stack and Stripe API to implement payments",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "products": "nodemon data_scraping/products.js",
    "start": "node server.js",
    "server": "nodemon server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sb1994/reshop.git"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.13",
    "stripe": "^8.132.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "csvjson": "^5.1.0",
    "convert-csv-to-json": "^1.3.0",
    "csvtojson": "^2.0.10",
    "nodemon": "^2.0.7"
  },
